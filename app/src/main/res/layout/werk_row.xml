<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/werk_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@mipmap/add_btn" />

        <TextView
            android:id="@+id/werk_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Titel des Werks"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/werk_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Beschreibung" />

        <ImageButton
            android:id="@+id/addCommentWerk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/submitBtn"
            android:layout_alignEnd="@+id/descField"
            android:layout_alignRight="@+id/descField"
            android:layout_marginBottom="18dp"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>
</android.support.v7.widget.CardView>